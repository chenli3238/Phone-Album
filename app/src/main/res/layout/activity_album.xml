<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activity.AlbumActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/album_activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#cceed0">

        <ImageButton
            android:id="@+id/ib_album_activity_back"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:src="@mipmap/back_icon"
            android:background="#00000000"
            />

        <TextView
            android:id="@+id/tv_album_activity_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="相册"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:gravity="center_vertical"/>

        <TextView
            android:id="@+id/album_activity_title"
            style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="文件夹"
            android:textColor="#ffffff" />


        <TextView
            android:id="@+id/tv_bt_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择"
            android:textColor="#ffffff"
            android:layout_gravity="right"
            android:textSize="18sp"
            android:layout_marginEnd="20dp"/>

    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.Toolbar
        android:id="@+id/add_friend_tools_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#cceed0"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_bt_choose_count"
            style="@style/TextAppearance.Widget.AppCompat.Toolbar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已选择0项"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_bt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_gravity="right"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:layout_marginEnd="20dp"/>

        <ImageView
            android:id="@+id/iv_share_choose"
            android:src="@mipmap/share_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginEnd="6dp"
            android:contentDescription="share" />

        <ImageView
            android:id="@+id/iv_delete_choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/delete_icon"
            android:layout_marginEnd="5dp"
            android:layout_gravity="right"
            android:contentDescription="delete" />


    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_album_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

</LinearLayout>